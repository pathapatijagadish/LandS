<div class='container_12'>
  <div class='banner'>
    <div class='homePageBanner'>
      <% @banners.each do |banner| %>  
        <div>
          <%= image_tag(banner.photo_url,size: "1440x500") %>
          <div class='bannerInfo'>
            <p><%= banner.message %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
  <% @equipment.each do |equipment| %>
  <div class='container_12 equipment'>
    <ul>
    <% if (equipment.id).odd? %>
      <li>
        <div class='grid_2'>&nbsp;</div>
        <div class='grid_4 mobilehide'>
          <%= image_tag(equipment.photo_url,size: "80x46") %>
        </div>
        <div class='grid_4'>
           <h2 class='commomheading'><%= equipment.title %></h2>
          <p><%= equipment.description %></p>
        </div>
        <div class='grid_4 mobileshow'>
          <div class='mobileimages'>
            <p><%= image_tag(equipment.photo_url,size: "80x46") %></p>
          </div>
        </div>
        <div class='grid_2'>&nbsp;</div>
        <div class='clear'></div>
      </li>
    <% else %>
      <li class='even'>
        <div class='grid_2'>&nbsp;</div>
        <div class='grid_4'>
          <h2 class='commomheading'><%= equipment.title %></h2>
          <p><%= equipment.description %></p>
        </div>
        <div class='grid_4 mobilehide'>
          <%= image_tag(equipment.photo_url,size: "80x46") %>
        </div>
        <div class='grid_4 mobileshow'>
          <div class='mobileimages'>
            <%= equipment.title %>
          </div>
        </div>
        <div class='grid_2'>&nbsp;</div>
        <div class='clear'></div>
      </li>
    <% end %>
   
    </ul>
  <% end %>
</div>
