<div class='bodyCnt'>
  <div class='wraper'>
    <div class='' id='inner-main'>

      <div class='subNavCnt'>
        <h1>New Slider</h1>
        <div class='moreLinks'>
          <ul>
            <li>
              <%= link_to 'Back', admin_home_page_sliders_path %>
            </li>
          </ul>
        </div>
        <div class='clear'></div>
      </div>

      <div class='wraper'>
        <%= form_for [:admin,@home_page_slider],:html=>{:multipart =>true }  do |f| %>
          <div class='sectionCnt'>
            <h2>
              Slider
            </h2>
            <div class='formLayout'>

              <div class='row'>
                <%= f.label :image_text %>
                <div class='inputCnt'>
                  <%= f.text_area :image_text %>
                </div>
                <div class='clear'></div>
              </div>

              <div class='row'>
                <%= f.label :sequence %>
                <div class='inputCnt'>
                  <%= f.text_field :sequence %>
                </div>
                <div class='clear'></div>
              </div>

              <div class='row'>
                <%= f.label :link %>
                <div class='inputCnt'>
                  <%= f.text_field :link %>
                </div>
                <div class='clear'></div>
              </div>

              <div>
                <%#= image_tag(@service.photo_url) if f.photo? %>
                <%= f.label :Image %>
                <%= f.file_field :photo %>
                <%= f.hidden_field :photo_cache %>
              </div>

              <div class='actions'>
                <%= f.submit %>
              </div>
            </div>
          </div>
        <% end %>
      </div>

    </div>
    <div class='clear'></div>
  </div>
  <div class='clear'></div>
</div>