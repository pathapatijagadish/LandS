<div class='bodyCnt'>
  <div class='wraper'>
    <div class='' id='inner-main'>
      <div class='subNavCnt'>
        <h1>New Project</h1>
        <div class='moreLinks'>
          <ul>
            <li>
            <%= link_to "Back", admin_projects_path %>
            </li>
          </ul>
        </div>
        <div class='clear'></div>
      </div>
      <div class='wraper'>
        <%= nested_form_for([:admin,@project]) do |f| %>
          <div class='sectionCnt'>
            <h2>Project</h2>
            <div class='formLayout'>
              <div class='row'>
                <%= f.label :title %>
                <div class='inputCnt'>
                  <%= f.text_field :title %>
                </div>
                <div class='clear'></div>
              </div>

              <div class='row'>
                <%= f.label :description %><br>
                <div class='inputCnt'>
                  <%= f.text_area :description %>
                </div>
                <div class='clear'></div>
              </div>

              <div class='row'>
                <%= f.label :sequence %><br>
                <div class='inputCnt'>
                  <%= f.number_field :sequence %>
                </div>
                <div class='clear'></div>
              </div>

              <div>
                <%#= image_tag(@service.photo_url) if f.photo? %>
                <%= f.label :Image %>
                <%= f.file_field :photo %>
                <%= f.hidden_field :photo_cache %>
              </div>

              <div class='row'>
                <%= f.fields_for :images do |image_form| %>
                  <%= image_tag(image_form.object.photo.url,size: "50x46") if image_form.object.photo.present? %>&nbsp&nbsp
                  <p><%= f.label :sequence %>&nbsp<%= f.number_field :sequence %></p><br>
                  <p><%= image_form.label :image,"Upload Image"%>&nbsp<%= image_form.file_field :photo%></p>
                  <%= image_form.link_to_remove "Remove this image" %>
                <% end %>
                <p><%= f.link_to_add "Add a image", :images %></p>
              </div>

              <div class='actions'>
                <%= f.submit %>
              </div>
            </div>
          </div>
        <% end %>
        
      </div>
  
    </div>
  </div>
<div class='clear'></div>
</div>
<div class='clear'></div>
</div>


